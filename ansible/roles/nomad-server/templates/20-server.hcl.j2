server {
  enabled = true
  bootstrap_expect = 1
}

client {
  enabled = true
  cni_path = "/usr/libexec/cni"
{% for volume in nomad_volumes|default([]) %}

  host_volume "{{volume.name}}" {
    path = "{{volume.path}}"
    read_only = {{volume.read_only|bool|lower}}
  }
{% endfor %}
}
